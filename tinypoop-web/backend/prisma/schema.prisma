generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  user_id   String   @unique
  uuid      String   @unique
  username  String   @unique
  email     String   @unique
  password  String
  role      String
}

model Place{
  id        String   @id @default(uuid())
  place_id   String   @unique
  name      String
  address   String
  description String
  create_by String
  create_date DateTime @default(now())
}

model Locate{
  id        String   @id @default(uuid())
  locate_id String   @unique
  place_id   String
  building_name String
  floor String
  room String
}

model Report{
  id        String   @id @default(uuid())
  place_id   String
  user_id String
  locate_id String
  content String
  status String
  assigned_staff_id String
  complete_at DateTime
  create_at DateTime @default(now())
}

model Notification{
  id        String   @id @default(uuid())
  notification_id String   @unique
  user_id String
  report_id String
  is_read Boolean @default(false)
  create_at DateTime @default(now())
}